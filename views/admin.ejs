            </div>
            
            <!-- POSTS -->
            <div class="admin-card">
                <h3><i class="fas fa-newspaper"></i> Posts</h3>
                <div class="card-links">
                    <a href="/admin/posts/add" class="card-link create">➕ Criar Post</a>
                    <a href="/admin/posts/lst" class="card-link manage">⚙️ Gerenciar</a>
                </div>
            </div>
            
            <!-- COMUNIDADES -->
            <div class="admin-card">
                <h3><i class="fas fa-users"></i> Comunidades</h3>
                <div class="card-links">
                    <a href="/admin/comunidades/add" class="card-link create">➕ Criar Comunidade</a>
                    <a href="/admin/comunidades/lst" class="card-link manage">⚙️ Gerenciar</a>
                </div>
            </div>
            
