<%- include('../../cabecalho.ejs') %>
    <div style="margin-bottom: 20px;">
        <a href="/admin/solicitacoes/lst" class="card-link view">← Voltar para Solicitações</a>
    </div>
    <h1>Rejeitar Solicitação</h1>
    
    <div style="border: 1px solid #ddd; padding: 20px; border-radius: 8px; margin-bottom: 20px;">
        <p><strong>Solicitação:</strong> <%= solicitacao.nome %></p>
        <p><strong>Tipo:</strong> <span style="text-transform: capitalize;"><%= solicitacao.tipo %></span></p>
    </div>
    
    <form method="post" style="max-width: 600px;">
        <label style="display: block; margin-bottom: 15px;">
            <strong>Motivo da Rejeição (opcional):</strong>
            <textarea name="motivo" style="width: 100%; height: 150px; padding: 8px; border: 1px solid #ccc; border-radius: 4px; font-family: Arial, sans-serif;" placeholder="Explicar por que a solicitação foi rejeitada..."></textarea>
        </label>
        
        <div style="display: flex; gap: 10px;">
            <button type="submit" style="background-color: #dc3545; color: white; padding: 10px 20px; border: none; border-radius: 4px; font-weight: bold; cursor: pointer;">✗ Confirmar Rejeição</button>
            <a href="/admin/solicitacoes/lst" style="text-decoration: none; background-color: #6c757d; color: white; padding: 10px 20px; border-radius: 4px; font-weight: bold;">Cancelar</a>
        </div>
    </form>
    
    <%- include('../../rodape.ejs') %>
