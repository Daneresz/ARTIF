<%- include('../../cabecalho.ejs') %>
    <div style="margin-bottom: 20px; display: flex; justify-content: space-between; align-items: center;">
        <a href="/admin" class="card-link view">← Voltar para Admin</a>
        <a href="/admin/artista/add" class="card-link create">+ Novo(a) Artista</a>
    </div>
    <h1>Gerenciar Artistas</h1>
    <form method="get" action="/admin/artista/lst" style="margin-bottom: 16px;">
        <input type="text" name="busca" placeholder="Pesquisar por Artista ou Arte"
            value="<%= typeof busca !== 'undefined' ? busca : '' %>">
        <button type="submit">Buscar</button>
    </form>
    <table>
        <tr>
            <td>Perfil</td>
            <td>Artes</td>
            <td>Artista</td>
            <td>Idade</td>
            <td>Ações</td>
        </tr>
        <% if (Musicas.length===0) { %>
            <tr>
                <td colspan="5">nada foi encontrado, verifique se digitou corretamente</td>
            </tr>
            <% } else { %>
                <% for (const m of Musicas) { %>
                    <tr>
                        <td>
                            <% if (m.perfil) { %>
                                <img src="<%= m.perfil %>" alt="perfil" style="width:80px; height:auto" onerror="this.src='/img/user-placeholder.svg'">
                                <% } %>
                        </td>
                        <td>
                            <% if (m.artes && m.artes.length > 0) { %>
                                <%= m.artes.join(', ') %>
                            <% } else if (m.arte) { %>
                                <%= m.arte %>
                            <% } %>
                        </td>
                        <td>
                            <%= m.artista %>
                        </td>
                        <td>
                            <%= m.idade %>
                        </td>
                        <td>
                            <a href="/admin/artista/edt/<%= m._id %>" class="btn edit">Editar</a>
                            <a href="#" class="btn delete" onclick="event.preventDefault(); openGlobalConfirm('/admin/artista/del/<%= m._id %>', 'Tem certeza que deseja deletar este artista?')">Deletar</a>
                        </td>
                    </tr>
                    <% } %>
                        <% } %>
    </table>
    <%- include('../../rodape.ejs') %>
