<%- include('../../cabecalho.ejs') %>
    <div style="margin-bottom: 20px; display: flex; justify-content: space-between; align-items: center;">
        <a href="/admin" class="card-link view">← Voltar para Admin</a>
        <a href="/admin/comunidades/add" class="card-link create">+ Nova Comunidade</a>
    </div>
    <h1>Gerenciar Comunidades</h1>
    <form method="get" action="/admin/comunidades/lst" style="margin-bottom: 16px;">
        <input type="text" name="busca" placeholder="Pesquisar por Nome ou Arte"
            value="<%= typeof busca !== 'undefined' ? busca : '' %>">
        <button type="submit">Buscar</button>
    </form>
    <table>
        <tr>
            <td>Nome</td>
            <td>Arte</td>
            <td>Membros</td>
            <td>Ações</td>
        </tr>
        <% if (Comunidades && Comunidades.length > 0) { %>
            <% Comunidades.forEach(comunidade => { %>
                <tr>
                    <td>
                        <strong><%= comunidade.nome %></strong>
                    </td>
                    <td>
                        <%= comunidade.arte %>
                    </td>
                    <td>
                        <%= comunidade.membros ? comunidade.membros.length : 0 %>
                    </td>
                    <td>
                        <a href="/admin/comunidades/ver/<%= comunidade._id %>" class="btn edit">Ver</a>
                        <a href="/admin/comunidades/edt/<%= comunidade._id %>" class="btn edit">Editar</a>
                        <a href="#" class="btn delete" onclick="event.preventDefault(); openGlobalConfirm('/admin/comunidades/del/<%= comunidade._id %>', 'Tem certeza que deseja deletar esta comunidade?')">Deletar</a>
                    </td>
                </tr>
            <% }) %>
        <% } else { %>
            <tr>
                <td colspan="4">nada foi encontrado, verifique se digitou corretamente</td>
            </tr>
        <% } %>
    </table>
    <%- include('../../rodape.ejs') %>
