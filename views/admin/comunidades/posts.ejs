<style>
    .posts-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 0;
    }

    .posts-header {
        margin-bottom: 25px;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .posts-header a {
        color: #E53935;
        font-weight: 600;
        font-size: 16px;
        text-decoration: none;
        padding: 8px 14px;
        border-radius: 999px;
        transition: 0.2s;
    }

    .posts-header a:hover {
        background: rgba(229, 57, 53, 0.1);
        color: #F9A825;
    }

    .posts-header h1 {
        margin: 0;
        font-size: 24px;
        flex: 1;
        background: linear-gradient(90deg, #E53935, #F9A825);
        -webkit-background-clip: text;
        color: transparent;
    }

    .posts-feed {
        background: rgba(255, 255, 255, 0.95);
        border: 1px solid rgba(229, 57, 53, 0.25);
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(229, 57, 53, 0.1);
    }

    .post-item {
        padding: 20px;
        border-bottom: 1px solid rgba(229, 57, 53, 0.15);
        transition: background-color 0.2s ease;
    }

    .post-item:last-child {
        border-bottom: none;
    }

    .post-item:hover {
        background-color: rgba(249, 168, 37, 0.08);
    }

    .post-author {
        font-weight: 600;
        font-size: 15px;
        color: #333;
        margin-bottom: 8px;
    }

    .post-author.deleted {
        color: #999;
    }

    .post-content {
        font-size: 14px;
        color: #555;
        margin-bottom: 12px;
        line-height: 1.5;
        word-wrap: break-word;
    }

    .post-image {
        margin: 12px 0;
        border-radius: 14px;
        max-width: 100%;
        height: auto;
        display: block;
        max-height: 350px;
        object-fit: cover;
        background: #f5f5f5;
    }

    .post-actions {
        display: flex;
        justify-content: flex-end;
        margin-top: 12px;
    }

    .post-action-btn {
        background: none;
        border: none;
        color: #E53935;
        cursor: pointer;
        font-size: 13px;
        font-weight: 600;
        text-decoration: none;
        transition: 0.2s;
        padding: 4px 8px;
        letter-spacing: 0.3px;
    }

    .post-action-btn:hover {
        color: #F9A825;
        text-decoration: underline;
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #999;
        font-size: 15px;
    }

    .posts-count {
        font-size: 13px;
        color: rgba(229, 57, 53, 0.7);
        margin-top: 5px;
        font-weight: 500;
    }

    .btn-postar-adm {
        padding: 10px 16px;
        background: linear-gradient(90deg, #E53935, #F9A825);
        color: white;
        border: none;
        border-radius: 999px;
        cursor: pointer;
        font-weight: 600;
        font-size: 13px;
        transition: 0.2s;
        box-shadow: 0 8px 20px rgba(229, 57, 53, 0.3);
        white-space: nowrap;
    }

    .btn-postar-adm:hover {
        transform: translateY(-1px) scale(1.01);
        opacity: 0.9;
    }

    /* Modal ADM Post */
    .adm-post-modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        z-index: 1001;
        align-items: center;
        justify-content: center;
        overflow-y: auto;
    }

    .adm-post-modal.active {
        display: flex;
    }

    .adm-modal-content {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        padding: 30px;
        max-width: 500px;
        width: 90%;
        max-height: 90vh;
        overflow-y: auto;
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15);
        border: 1px solid rgba(229, 57, 53, 0.25);
        backdrop-filter: blur(6px);
        margin: auto;
    }

    .adm-modal-content h2 {
        margin: 0 0 20px 0;
        font-size: 24px;
        background: linear-gradient(90deg, #E53935, #F9A825);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        font-weight: 600;
    }

    .adm-form-group {
        margin-bottom: 15px;
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .adm-form-group label {
        font-weight: 600;
        color: #E53935;
        font-size: 14px;
    }

    .adm-form-group input,
    .adm-form-group textarea {
        padding: 12px 14px;
        border: 2px solid rgba(229, 57, 53, 0.4);
        border-radius: 14px;
        font-size: 14px;
        font-family: inherit;
        transition: 0.2s;
    }

    .adm-form-group textarea {
        resize: vertical;
        min-height: 120px;
    }

    .adm-form-group input:focus,
    .adm-form-group textarea:focus {
        outline: none;
        border-color: #E53935;
        box-shadow: 0 0 0 3px rgba(249, 168, 37, 0.15), 0 0 8px rgba(249, 168, 37, 0.4);
    }

    .adm-modal-actions {
        display: flex;
        gap: 10px;
        justify-content: flex-end;
        margin-top: 20px;
    }

    .adm-btn-cancel {
        padding: 10px 20px;
        border: 2px solid rgba(229, 57, 53, 0.4);
        background: white;
        color: #E53935;
        border-radius: 999px;
        cursor: pointer;
        font-size: 14px;
        transition: all 0.2s;
        font-weight: 600;
    }

    .adm-btn-cancel:hover {
        background: rgba(229, 57, 53, 0.1);
        border-color: #F9A825;
        color: #F9A825;
    }

    .adm-btn-submit {
        padding: 10px 20px;
        background: linear-gradient(90deg, #E53935, #F9A825);
        color: white;
        border: none;
        border-radius: 999px;
        cursor: pointer;
        font-size: 14px;
        font-weight: 600;
        transition: all 0.2s;
        box-shadow: 0 8px 20px rgba(229, 57, 53, 0.3);
    }

    .adm-btn-submit:hover {
        transform: translateY(-1px) scale(1.01);
        opacity: 0.9;
    }

    .adm-badge {
        display: inline-block;
        background: linear-gradient(90deg, #E53935, #F9A825);
        color: white;
        padding: 4px 12px;
        border-radius: 999px;
        font-size: 11px;
        font-weight: 700;
        letter-spacing: 0.5px;
        margin-left: 8px;
    }
</style>

<div class="posts-container">
    <div class="posts-header">
        <a href="/admin/comunidades/lst">‚Üê Voltar</a>
        <div style="flex: 1;">
            <h1><%= comunidade.nome %></h1>
            <div class="posts-count"><%= posts && posts.length > 0 ? posts.length + ' post' + (posts.length !== 1 ? 's' : '') : 'Nenhum post' %></div>
        </div>
        <button class="btn-postar-adm" onclick="openAdmPostModal()">üì¢ Postar como ADM</button>
    </div>

    <% if (posts && posts.length > 0) { %>
        <div class="posts-feed">
            <% posts.forEach(post => { %>
                <div class="post-item">
                    <div class="post-author <%= post.artistaDeletado ? 'deleted' : '' %>">
                        <% if (post.artistaDeletado) { %>
                            üë§ Usu√°rio Deletado
                        <% } else if (post.artista === 'ADM') { %>
                            üì¢ ADM<span class="adm-badge">Administrador</span>
                        <% } else { %>
                            <%= post.artista %>
                        <% } %>
                    </div>
                    
                    <div class="post-content">
                        <%= post.descricao %>
                    </div>
                    
                    <% if (post.imagem) { %>
                        <img src="<%= post.imagem %>" alt="Post image" class="post-image" onerror="this.style.display='none'">
                    <% } %>
                    
                    <div class="post-actions">
                        <a href="#" class="post-action-btn" onclick="event.preventDefault(); openGlobalConfirm('/admin/comunidades/posts/<%= comunidade._id %>/del/<%= post._id %>', 'Tem certeza que deseja deletar este post?')">
                            üóëÔ∏è Deletar
                        </a>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <div class="empty-state">
            <p>Nenhum post nesta comunidade ainda</p>
        </div>
    <% } %>
</div>

<!-- Modal ADM Post -->
<div class="adm-post-modal" id="admPostModal">
    <div class="adm-modal-content">
        <h2>Novo Post como Administrador <span class="adm-badge">ADM</span></h2>
        <form method="post" action="/admin/comunidades/<%= comunidade._id %>/post" enctype="multipart/form-data">
            <div class="adm-form-group">
                <label for="descricao">Mensagem</label>
                <textarea id="descricao" name="descricao" placeholder="O que voc√™ quer compartilhar?" required></textarea>
            </div>

            <div class="adm-form-group">
                <label for="admImagem">Imagem (opcional)</label>
                <input type="file" id="admImagem" name="imagem" accept="image/*">
            </div>

            <div class="adm-modal-actions">
                <button type="button" class="adm-btn-cancel" onclick="closeAdmPostModal()">Cancelar</button>
                <button type="submit" class="adm-btn-submit">Postar</button>
            </div>
        </form>
    </div>
</div>

<script>
    function openAdmPostModal() {
        document.getElementById('admPostModal').classList.add('active');
        document.getElementById('descricao').focus();
    }

    function closeAdmPostModal() {
        document.getElementById('admPostModal').classList.remove('active');
    }

    // Fechar ao clicar fora
    document.getElementById('admPostModal').addEventListener('click', function(e) {
        if (e.target === this) {
            closeAdmPostModal();
        }
    });

    // Fechar com Escape
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            closeAdmPostModal();
        }
    });
</script>

